#!/bin/bash

EMUBIN="/home/jsseidel/rc/emu/runmess"
RCBIN="/home/jsseidel/rc/RetrocadeOS/retrocadeos"
PICDIRNORM="/home/jsseidel/rc/nes_flyers_norm"
ININORM="/home/jsseidel/rc/rcini/rc_norm_nes.ini"
ROMS="/home/jsseidel/rc/nes_roms"

#
# Args for retrocade
NORM="-cx 1024 -cy 768 -bmpx 290 -bmpy 260 -cfg ${ININORM} -pic ${PICDIRNORM} -ss 10"

while [[ 1 ]]
do
	# Run retrocade
	`${RCBIN} ${NORM}`

	# Source the output of RUNGAME
	. ./RUNGAME	
	
	if [[ ${STATE} = "SHELL" ]]
 	then	
		exit
	elif [[ ${STATE} = "SWITCH" ]]
 	then	
		exec /home/jsseidel/rc/RetrocadeOS/rcctl.sega
	else
		if [[ ${STATE} = "SHUTDOWN" ]] 
		then
			# Only works if running kiosk mode as root
			`shutdown -h now`
		else
			`${EMUBIN} -cartridge ${ROMS}/${STATE} ${PREFS} nes`
		fi
	fi
done

